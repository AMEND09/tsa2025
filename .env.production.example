# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agrimind_production
DB_PASSWORD=your-secure-database-password

# Google Gemini API
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Cloud Storage (Optional - for static files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
